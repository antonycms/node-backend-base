{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": [
    "airbnb-base"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "default-case": "off",
    "camelcase": "off",
    "class-methods-use-this": "off",
    "consistent-return": "off"
  },
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [
          [
            "~root",
            "./src"
          ]
        ],
        "extensions": [
          ".js"
        ]
      }
    }
  }
}